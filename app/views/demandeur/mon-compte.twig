{% extends "base.twig" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block type %}
    {{ type }}
{% endblock %}

{% block content %}

    <section class="myaccount">
        <h1>Mon compte</h1>
        <div class="myaccount__content">
            <div class="myaccount__content__nav">
                <ul>
                    <li>
                        <a href="#perso"
                           class="js-account-nav myaccount__content__nav-link {% if view == 'perso' %}--active{% endif %}">
                            Informations personnelles
                            <i class="icon icon-fi-rr-info"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#intervenant"
                           class="js-account-nav myaccount__content__nav-link {% if view == 'intervenant' %}--active{% endif %}">
                            Devenir intervenant
                            <i class="icon icon-fi-rr-redo"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#options"
                           class="js-account-nav myaccount__content__nav-link {% if view == 'options' %}--active{% endif %}">
                            Options
                            <i class="icon icon-fi-rr-comment-user"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="myaccount__content__body">
                <div class="myaccount__content__body-form">
                    <div id="perso" class="js-account-content --display">
                        {% include '/demandeur/compte/perso.twig' %}
                    </div>
                    <div id="intervenant" class="js-account-content">
                        {% include '/demandeur/compte/intervenant.twig' %}
                    </div>
                    <div id="options" class="js-account-content">
                        {% include '/demandeur/compte/options.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}