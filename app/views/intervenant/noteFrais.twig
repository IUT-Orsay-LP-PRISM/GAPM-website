<section class="notefrais">
    <h2 class="myaccount__form-title">Situation financière</h2>
    <div class="notefrais--situation">
        <p class="notefrais--situation__title" >Remboursements en attente</p>
        <p class="notefrais--situation__total">{{ TotalRemboursementsEnAttente }} €</p>
    </div>

    <h2 class="myaccount__form-title">
        <p>Notes de frais</p>
        <select class="notefrais--selectStatus"  name="status">
            <option value="all">Tous les statuts</option>
            <option value="en attente">En attente</option>
            <option value="validée">Validée</option>
            <option value="refusée">Refusée</option>
            <option value="payée">Payée</option>
        </select>
    </h2>

    <table class="notefrais__table">
        <thead>
        <tr>
            <td>N°</td>
            <td>Date</td>
            <td>Montant</td>
            <td>Statut</td>
        </tr>
        </thead>
        <tbody>
        {% for note in noteFrais %}
            <tr>
                <td>{{ note.idNoteFrais }}</td>
                <td>{{ note.dateNote|date('d/m/Y') }}</td>
                <td>{{ note.montantTotal }}€</td>
                <td>{{ note.status|capitalize }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>