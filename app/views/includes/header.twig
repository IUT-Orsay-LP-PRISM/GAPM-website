<header class="header">
    <nav class="header__nav">
        <ul class="header__menu menu-left">
            <li data-page="accueil" class="menu-item"><a href="/" class="link">Accueil</a></li>
            {% if user.isIntervenant() and modeIntervenant %}
                <li data-page="search" class="menu-item">
                    <a href="/?action=planning" class="link">Planning</a>
                </li>
                <li data-page="mes-rendez-vous" class="menu-item">
                    <a href="/?action=mes-rendez-vous" class="link">Mes rendez-vous</a>
                </li>
            {% else %}
                <li data-page="faq" class="menu-item"><a href="/?action=faq" class="link">Besoin d'aide ?</a></li>
                <li data-page="info" class="menu-item"><a href="#" class="link">A propos</a></li>
            {% endif %}
        </ul>
        <ul class="header__menu menu-right">
            {% if userLogged %}
                {% if not modeIntervenant %}
                <li data-page="search" class="menu-item"><a href="/?action=search" class="link">Prendre RDV</a></li>
                <li data-page="mes-rendez-vous" class="menu-item"><a href="/?action=mes-rendez-vous" class="link">Mes
                        rendez-vous</a></li>
                {% endif %}
                <li class="dropdown">
                    <a href="#" class="btn btn-primary-nb">
                        <i class="icon-w icon-fi-rr-user"></i>
                        {{ user.prenom }}&nbsp;{{ user.nom }}
                        <i class="icon-w icon-fi-rr-angle-small-down dropdown-icon"></i>
                    </a>
                    <ul class="menu-dropdown">
                        <li>
                            <a href="?action=my-account" class="dropdown-item"><i
                                        class="icon icon-fi-rr-comment-user"></i>Mon compte</a>
                        </li>
                        {% if user is defined and user.isIntervenant() %}
                            {% if modeIntervenant is defined and modeIntervenant %}
                                <li class="menu-item">
                                    <a href="/?action=toggle-mode-intervenant" class="dropdown-item"><i
                                                class="icon-blue icon-fi-rr-redo"></i>Mode Demandeur</a>
                                </li>
                            {% else %}
                                <li class="menu-item">
                                    <a href="/?action=toggle-mode-intervenant" class="dropdown-item"><i
                                                class="icon-green icon-fi-rr-redo"></i>Mode intervenant</a>
                                </li>
                            {% endif %}
                        {% endif %}
                        <li class="--logout">
                            <a href="/?action=logout" class="dropdown-item">
                                <i class="icon icon-fi-rr-user-delete"></i>
                                Se déconnecter</a>
                        </li>
                    </ul>
                </li>
            {% else %}
                <li class="menu-item"><a id="btn-connexion" href="#" class="btn btn-primary-nb">
                        <i class="icon-w icon-fi-rr-user"></i>
                        Se connecter
                    </a></li>
                <li class="menu-item"><a id="btn-inscription" href="#" class="btn btn-secondary-nb"
                                         style="color: #393BAA !important;">
                        <i class="icon icon-fi-rr-user-add"></i>
                        S'inscrire
                    </a></li>
            {% endif %}
        </ul>
    </nav>
