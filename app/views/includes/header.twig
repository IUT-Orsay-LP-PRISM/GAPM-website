                            <li class="menu-item">
                                <a href="/?action=intervenant" class="btn btn-greenPrimary"><i
                                            class="icon-w icon-fi-rr-redo"></i>Mode intervenant</a>
                            </li>
                        {% endif %}
                        <li data-page='search' class="menu-item"><a href="/?action=search" class="link">Prendre RDV</a>
