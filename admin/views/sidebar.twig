<section class="admin__sidebar">
    <div class="admin__sidebar__head {% if admin.isAdmin %}admin-pro{% endif %}">
        <div class="admin__sidebar__title">
            <h2>G.A.P.M</h2>
            <p>
                {% if admin.isAdmin %}
                    Administrateur
                {% else %}
                    Personnel
                {% endif %}
            </p>
        </div>
    </div>
    <div class="admin__sidebar__content">
        <nav class="admin__nav">
            <ul>
                {% if admin.isAdmin %}
                <li>
                    <a href="./?action=stats" {% if nav == 'stats' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-stats"></i>
                        Statistiques
                    </a>
                </li>
                <li>
                    <a href="./?action=admins" {% if nav == 'admins' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-address-book"></i>
                        Gestion du personnel
                    </a>
                </li>
                {% endif %}
                <li>
                    <a href="./?action=demandeurs"  {% if nav == 'demandeurs' or nav == 'home' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-notebook"></i>
                        Gestion des demandeurs
                    </a>
                </li>
                <li>
                    <a href="./?action=intervenants" {% if nav == 'intervenants' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-doctor"></i>
                        Gestion des praticiens
                    </a>
                </li>
                {% if not admin.isAdmin %}
                <li>
                    <a href="./?action=notes-frais" {% if nav == 'notes' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-receipt"></i>
                        Notes de frais
                    </a>
                </li>
                <li>
                    <a href="./?action=emprunts" {% if nav == 'vehicles' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-car"></i>
                        Emprunts de véhicules
                    </a>
                </li>
                <li>
                    <a href="./?action=demande" {% if nav == 'beinter' %}class="--active"{% endif %}>
                        <i class="icon-fi-rr-apps"></i>
                        Application d'intervenant
                    </a>
                </li>
                {% endif %}
            </ul>
        </nav>
    </div>
    <div class="admin__sidebar__footer">
        <ul>
            <li>
                <a href="./?action=logout"><i class="icon-fi-rr-user"></i>Se déconnecter</a>
            </li>
        </ul>
    </div>
</section>