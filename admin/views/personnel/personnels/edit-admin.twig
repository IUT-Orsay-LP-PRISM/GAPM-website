{% extends 'layouts/layout-admin.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
	<div class="admin__page__title">
		<h1>{{ title }}</h1>
	</div>
	<div class="admin__page__content admin__inter__see">
	<form class="admin__inter admin__inter__edit" method="post" action="./?action=update-admin">
		<input type="hidden" name="id" value="{{ admine.idAdministration }}">
		<div class="admin__inter__noms admin__input admin__input-edit">
			<label for="editname">
				Nom
			</label>
			<input type="text" id="editname" value="{{ admine.nom }}" name="nom">
		</div>
		<div class="admin__input admin__input-edit">
			<label for="editnamef">
				Pr√©nom
			</label>
			<input type="text" id="editnamef" value="{{ admine.prenom }}" name="prenom">
		</div>
		<br>&nbsp;<br>
		<div class="admin__inter__noms admin__input admin__input-edit">
			<label for="editlogin">
				Login
			</label>
			<input type="text" id="editlogin" value="{{ admine.login }}" name="login" disabled>
		</div>
		<div class="admin__inter__noms admin__input admin__input-edit">
			<label for="editemail">
				E-mail
			</label>
			<input type="text" id="editemail" value="{{ admine.email }}" name="email">
		</div>
		<button type="submit" class="btn btn-secondary-nb">
			<i class="icon-fi-rr-edit"></i>
			Modifier
		</button>
	</form>
{% endblock %}